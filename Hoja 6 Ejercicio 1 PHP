<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <link rel="stylesheet" href="formstyle.css">
    </head>
    <body>
    <?php
        echo <<<frm
            <div class=formulario>
                <h1>Ingresar</h1>
                <form action=# method=POST enctype=multipart/for-data>
                    <input type=text name=user_name placeholder="Nombre de usuario" required>
                    <br><br>
                    <input type=password name=user_pass placeholder=Contraseña required>
                    <br><br><br>
                    <input type=submit value=Entrar>
                </form>
            </div>
        frm;

        $valid_users = array("David", "Alejandro", "Fernándo", "Alfredo", "María", "Candela");
        $valid_pass = array("dvd", "ljndr", "frnnd", "lfrd", "mr", "cndl");

        if(isset($_POST['user_name'], $_POST['user_pass'])){
            $user=$_POST['user_name'];
            $pass=$_POST['user_pass'];

            $valid = false;

            foreach($valid_users as $u){
                if($u == $user) {
                    $valid = true;
                }
            }
            
            if($valid){
                $valid = false;
                foreach($valid_pass as $p){
                    if($p == $pass){
                        $valid = true;
                    }
                }

                if($valid){
                    header('Ejercicio1.1-H6.php');
                }
            }

            
        }
    ?>
    </div>
    </body>
</html> 
