<?php
    function form($tipo){
        if($tipo == "registro"){
            echo <<<registro
            <form action=# method=POST enctype=multipart/form-data>
                <label>Introduce tu nombre</label> <br><br>
                <input type=text name=nombre required> <br><br>
                <label>Introduce tus apellidos</label> <br><br>
                <input type=text name=apellidos required> <br><br>
                <label>Introduce tu dirección</label> <br><br>
                <input type=text name=direccion required> <br><br>
                <label>Introduce tu número de teléfono</label> <br><br>
                <input type=number name=tlfn required> <br><br>
                <label>Introduce tu provincia</label> <br><br>
                <input type=text name=provincia required> <br><br><br>
                <input type=submit name=enviado value=Registrar>
            </form>
            registro;
        } else {
            echo <<<iniciar_sesion
            <form action=# method=POST enctype=multipart/form-data>
                <label>Introduce tu nombre</label> <br><br>
                <input type=text name=nombre required> <br><br>
                <label>Introduce tu número de teléfono</label> <br><br>
                <input type=number name=tlfn required> <br><br><br>
                <input type=submit name=enviado value="Inciar sesión">
            </form>
            iniciar_sesion;
        }
        
    }
?>
