<?php
    function randomColor(){
        return rand(0, 255);
    }

    function randomChar(){
        $caracteres = '0123456789abcdefghijklmnopqrstuvwxyz';
        return substr(str_shuffle($caracteres), 0, 1);
    }

    function randomAngle($negatives){
        if($negatives == true){
            return rand(-360, 360);
        } else {
            return rand(0, 360);
        }
        

    }
?>
