<?php
    $limMult = 10;
    $nTable = $_GET['tabla'];

    echo "<table style='width: 10%'>";
    echo "<h3>Tabla del $nTable</h3>";

    for($j = 1; $j <= $limMult; $j++) {
        echo "<tr>";
        echo "<td>$nTable x $j</td>";
        echo "<td>";
        echo ($nTable * $j);
        echo "</td>";
        echo "</tr>";
    }
    
    echo "</table>";
?>
